    qed
  qed
next
  case case_2
  solve( Accept( test, k ) @ #i1 )
    case Init_2
    solve( Init( ~ex, $A, $B ) ▶₀ #i1 )
      case Init_1
      solve( !LTK( $A, skA ) ▶₁ #i1 )
        case KGC_request
        solve( Sid( ~ex, <A.1, B.1, X, Y.1, role1> ) @ #i1 )
          case Init_2
          solve( !KU( kdf(<z, em(hp($A), hp($B))^~n, $A, $B, 'g'^~ex, Y>) ) @ #vk )
