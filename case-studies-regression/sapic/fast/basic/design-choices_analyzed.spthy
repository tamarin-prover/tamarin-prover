    qed
  qed
next
  case case_2
  solve( State_112( lock ) ▶₀ #t1 )
    case lookupvisitedasv_1_11
    solve( State_112( lock ) ▶₀ #t2 )
      case lookupvisitedasv_1_11
      solve( ((#vr.1 < #vr.6) ∧
              (∃ #t2.
                (Unlock_0( '0', ~n, 's' ) @ #t2)
