*/
induction
  case empty_trace
  by contradiction /* from formulas */
next
  case non_empty_trace
  simplify
  solve( (∃ z. ((x++z) = y))  ∥ (∃ z. ((y++z) = x))  ∥ (y = x) )
    case case_1
    by contradiction /* from formulas */
  next
    case case_3
    by contradiction /* cyclic */
  qed
qed

